<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.11/css/dataTables.bootstrap.min.css">
<script type="text/javascript" language="javascript" src="https://cdn.datatables.net/1.10.11/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" language="javascript" src="https://cdn.datatables.net/1.10.11/js/dataTables.bootstrap.min.js"></script>
<div class="col-xs-12 col-xs-offset-0 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3" id="content">
  <h1>Liste des utilisateurs</h1>
  <%= link_to "Exporter en PDF", database_dump_path(:format => "pdf"), :target => '_blank', :class => 'btn btn-red' %>
  <div id="list-users">
    <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Age</th>
                <th>CV</th>
                <th>Inscrit le</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.nom %></td>
              <td><%= ((Date.today - user.birthdate) / 365).floor %></td>
              <td>
                <% if(user.cvPath.blank?) %>
                  Absent
                <% else %>
                  Disponible
                <% end %>
              </td>
              <td><%= user.created_at.strftime("%d/%m/%Y") %></td>
              <td class="center">
                <%= link_to user, :class => "btn btn-table" do %>
                  <i class='fa fa-eye'></i> Voir
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
    </table>
  </div>
</div>
<script>
  $(document).ready(function() {
    $('#example').DataTable( {
        "language": {
            "url": "/dataTable/French.json"
        }
    } );
} );
</script>