<div class="col-xs-12 col-xs-offset-0 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3 nopadding">
<% if params[:just_created]  %>
	<div class="alert alert-success fade in" role="alert">
		<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
		Merci <strong><%= @user.nom %></strong>, votre inscription a bien été prise en compte
	</div>
<% end %>
</div>
<div class="col-xs-12 col-xs-offset-0 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3" id="content">
	<h1>Informations - <%= @user.nom %></h1>
	<div>
		<div class="col-md-5 col-lg-5">
			<i class="fa fa-user"></i>&nbsp; <%= @user.nom %>
			<br><i class="fa fa-envelope"></i>&nbsp; <%= @user.email %>
			<br><i class="fa fa-birthday-cake"></i>&nbsp;Né(e) le <%= @user.birthdate.strftime("%d/%m/%Y") %> (<%= @age %> ans)
			<br><br>Moyenne des films vus chaque semaine:
			<ul>
				<li><i class="fa fa-film"></i> au cinéma: <%= @user.watchedMoviesCinema %></li>
				<li><i class="fa fa-tv"></i> à la TV: <%= @user.watchedMoviesTV %></li>
				<li><i class="fa fa-desktop"></i> sur ordinateur: <%= @user.watchedMoviesComputer %></li>
				<li><i class="fa fa-tablet"></i> sur tablette:<%= @user.watchedMoviesTablet %> </li>
			</ul>
			<br><i class="fa fa-book"></i>&nbsp;Moyenne des livres lus chaque semaine: <%= @user.readBooks %><br><br>
			<% if @user.readMoreBooks %>
				<div class="success"><i class="fa fa-thumbs-up"></i> Veut lire plus de livres</div>
			<% else %>
				<div class="error"><i class="fa fa-thumbs-down"></i> Ne veut pas lire plus de livres</div>
			<% end %>
		</div>
		<div class="col-md-7 col-lg-7 center">
			<% if !@user.cvPath.nil? %>
			<div class="col-lg-12 center">
				<iframe class="embed-responsive-item" src="/uploads/<%= @user.cvPath %>"></iframe>
			</div>
			<div class="col-lg-12 center">
				<%= link_to "/uploads/#{@user.id}.pdf", :class => "btn btn-red", :target => "_blank" do %>
				  <i class='fa fa-eye'></i> Afficher
				<% end %>
				<%= link_to "#{@user.id}/downloadCV", :class => "btn btn-red" do %>
				  <i class='fa fa-cloud-download'></i> Télécharger
				<% end %>
			</div>
			<% else %>
				<div class="col-lg-12 center error"><i class="fa fa-exclamation-circle"></i> Aucun CV déposé</div>
			<% end %>
		</div>
	</div>
</div>
