<div class="col-xs-6 col-xs-offset-3 col-lg-2 col-lg-offset-5">
  <h1>Inscription</h1>
  <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>
    <div class="form-group">
      <%= f.label :nom %><br />
      <%= f.text_field :nom, :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :birthdate %><br />
      <div class='input-group date' id='datetimepicker'>
        <input type='text' class="form-control" />
        <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar">
        </span>
        </span>
      </div>
    </div>
    <div class="form-group sr-only">
      <%= f.date_field :birthdate, :class => "form-control" %>
    </div>
    <%= f.submit "Inscription", :class => "btn btn-info" %>
  <% end %>
</div>
<script type="text/javascript" src="/js/datepicker-custom.js"></script>