<div class="col-xs-6 col-xs-offset-3 col-lg-2 col-lg-offset-5">
  <h1>Inscription</h1>
  <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>
    <div class="form-group">
      <%= f.label :nom %><br />
      <%= f.text_field :nom, :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.text_field :email, :class => "form-control" %>
    </div>
    <%= f.submit "Inscription", :class => "btn btn-info" %>
  <% end %>
</div>