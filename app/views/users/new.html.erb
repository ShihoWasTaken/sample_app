<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-2 col-lg-offset-5" id="content">
    <h1>Inscription</h1>
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>
        <div class="form-group">
            <%= f.label :nom, "Votre nom" %><br />
            <%= f.text_field :nom, :class => "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :email, "Votre adresse mail" %><br />
            <%= f.email_field :email, :class => "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label "datetimepicker", "Date de naissance" %><br />
            <div class='input-group date' id='datetimepicker'>
                <input type='text' class="form-control" id="user_datetimepicker" />
                <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar">
                </span>
                </span>
            </div>
        </div>
        <div class="form-group sr-only">
            <%= f.date_field :birthdate, :class => "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :watchedMovies, "Moyenne des films vu par semaine" %><br />
            <%= f.number_field :watchedMovies, :min => 0, :class => "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :readBooks, "Moyenne des livres lu par semaine"%><br />
            <%= f.number_field :readBooks, :min => 0, :class => "form-control" %>
        </div>
        <div class="form-group">
            <p>Voulez-vous lire plus de livres ?</p>
            <%= f.label :readMoreBooks, "Oui", :value => "true" %>
            <%= f.radio_button :readMoreBooks, 1, :checked => false %>
            <br />
            <%= f.label :readMoreBooks, "Non", :value => "false  " %>
            <%= f.radio_button :readMoreBooks, 0, :checked => true %>
        </div>
        <div class="form-group">
            <%= f.label :file, "DÃ©posez votre CV: " %><br />
            <%= f.file_field :file, :class => "form-control" %>
        </div>
        <%= f.submit "Inscription", :class => "btn btn-info" %>
    <% end %>
</div>
<script type="text/javascript" src="/js/datepicker-custom.js"></script>