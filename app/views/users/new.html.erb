<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4" id="content">
    <h1>Inscription</h1>
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>
        <div class="form-group">
            <%= f.label :nom, "Votre nom" %><br />
            <%= f.text_field :nom, :class => "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :email, "Votre adresse mail" %><br />
            <%= f.email_field :email, :class => "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label "datetimepicker", "Date de naissance" %><br />
            <div class='input-group date' id='datetimepicker'>
                <input type='text' class="form-control" id="user_datetimepicker" />
                <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar">
                </span>
                </span>
            </div>
        </div>
        <div class="form-group hidden">
            <%= f.date_field :birthdate, :class => "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :watchedMoviesCinema, "Moyenne des films vu par semaine au cinéma" %><br />
            <%= f.number_field :watchedMoviesCinema, :min => 0, :class => "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :watchedMoviesTV, "Moyenne des films vu par semaine à la TV" %><br />
            <%= f.number_field :watchedMoviesTV, :min => 0, :class => "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :watchedMoviesComputer, "Moyenne des films vu par semaine sur ordinateur" %><br />
            <%= f.number_field :watchedMoviesComputer, :min => 0, :class => "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :watchedMoviesTablet, "Moyenne des films vu par semaine sur tablette" %><br />
            <%= f.number_field :watchedMoviesTablet, :min => 0, :class => "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :readBooks, "Moyenne des livres lu par semaine"%><br />
            <%= f.number_field :readBooks, :min => 0, :class => "form-control" %>
        </div>
        <div class="form-group" id="readMoreBooks">
            <%= f.label :readMoreBooks, "Je veux lire plus de livres", :value => "true" %>
            <%= f.radio_button :readMoreBooks, true %>
            <%= f.label :readMoreBooks, "Je ne veux pas livre plus de livres", :value => "false" %>
            <%= f.radio_button :readMoreBooks, false, :checked => true %>
        </div>
        <div class="form-group">
            <%= f.label :file, "Déposez votre CV: " %><br />
            <%= f.file_field :file, :class => "form-control" %>
        </div>
        <%= f.submit "Inscription", :class => "btn btn-red" %>
    <% end %>
</div>
<script type="text/javascript" src="/js/form.js"></script>